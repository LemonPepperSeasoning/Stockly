<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/enabled"
        android:drawable="@drawable/watchlist_button_on"
        android:state_enabled="true"
        />

    <item
        android:id="@+id/disabled"
        android:drawable="@drawable/watchlist_button_off"
         />



    <transition
        android:fromId="@id/enabled"
        android:toId="@id/disabled"
        android:drawable="@drawable/watchlist_button_off_to_on" />

    <transition
        android:fromId="@id/disabled"
        android:toId="@id/enabled"
        android:drawable="@drawable/watchlist_button_on_to_off" />
</animated-selector>