<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <gradient
                android:angle="90"
                android:startColor="#717171"
                android:endColor="#171717"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Colored Rectangle -->
    <item
        android:bottom="3dp"
        android:top="3dp"
        android:right="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <gradient
                android:angle="90"
                android:startColor="#000000"
                android:endColor="#393939"
                android:type="linear"/>
        </shape>
    </item>

</layer-list>