            android:layout_weight="1">

            <include
                layout="@layout/portfolio_export_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="10dp" />
        </LinearLayout>

