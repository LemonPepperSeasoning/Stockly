<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#111229"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="stock status"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="35dp">
            <ImageView
                android:id="@+id/stock_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/stock_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_image_view"
            android:layout_alignParentLeft="true"
            android:text="symbo"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_name_view"
            android:text="$3354 +0.8%"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/status_view"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:contentDescription="stock status"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"></androidx.cardview.widget.CardView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>