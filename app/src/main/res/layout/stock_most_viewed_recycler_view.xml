<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/status_view"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/stock_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/status_view"
            android:src="@drawable/settingscomponent" />

        <TextView
            android:id="@+id/stock_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_image_view"
            android:layout_alignParentLeft="true"
            android:text="Stock"
            android:textColor="@color/white" />
        android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_name_view"
            android:text="$3354"
            android:textColor="@color/white"
            android:textSize="10sp" />/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>